@model IEnumerable<MvcAuth.Models.TB_CONTACTO>

@{
    ViewBag.Title = "Interesados";
}
<br /><br /><br /><br /><br />
<h2 style="text-align:center; font-family:'Blackadder ITC'">Interesados</h2>

<div style="margin:auto; width:80%; border:dotted">
    <table class="table">
        <tr>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.COD_CON)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.COD_DEMA)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.COD_OFER)
            </th>
            <th>
                @Html.DisplayName("NOMBRE")
            </th>
            <th>
                @Html.DisplayName("CORREO")
            </th>
            <th>
                @Html.DisplayName("TÉLEFONO")
            </th>
            <th>
                @Html.DisplayName("MENSAJE")
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.ESTADO)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.COD_DEP)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.COD_CON)
                </td>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.COD_DEMA)
                </td>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.COD_OFER)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_CON)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL_CON)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEL_CON)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEXT_CON)
                </td>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.ESTADO)
                </td>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.COD_DEP)
                </td>
            </tr>
        }

    </table>

    @Html.ActionLink("Volver", "DepaPublicados", "Membresia", "", htmlAttributes: new { @class = "btn btn-lg btn-outline-info" })
</div>