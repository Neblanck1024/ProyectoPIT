@model MvcAuth.Models.IndexViewModel
@{
    ViewBag.Title = "Gestionar";
}

<style>

    body {
        color: #326487;
    }

    .contenedor{
        border:5px dotted;
    }

    #col1 {
        margin: 0px;
        float: left;
        width: 50%;
    }

    #col2 {
