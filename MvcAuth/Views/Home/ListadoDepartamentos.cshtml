@model IEnumerable<MvcAuth.Models.TB_DEPARTAMENTO>

@{
    ViewBag.Title = "ListadoDepartamentos";
}

<br /><br /><br /><br /><br /><br />

<table class="table">
    <tr>
        <th style="display:none">
            @Html.DisplayName("Titulo")
        </th>
        <th>
            @Html.DisplayName("Titulo")
        </th>
        <th>
            @Html.DisplayName("Tipo")
        </th>
        <th>
            @Html.DisplayName("Distrito")
        </th>
        <th>
            @Html.DisplayName("Precio")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FOTO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="display:none">
            @Html.DisplayFor(modelItem => item.COD_DEP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_DEP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TB_TIPODEPARTAMENTO.NOM_TIPDEP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TB_DISTRITO.NOM_DIS)
        </td>
        <td>
            S/.@Html.DisplayFor(modelItem => item.PRECIO)
        </td>
        <td>
            <img style="border:solid" width="300" height="150" src="@Url.Action("convertirImagen", "Home", new {codigoDepa = item.COD_DEP})" />
        </td>
        <td>
            @Html.ActionLink("Seleccionar", "Details", new { id = item.COD_DEP }) 
        </td>
    </tr>
}

</table>
