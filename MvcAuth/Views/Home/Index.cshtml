@model MvcAuth.Models.Departamento
<!-- Masthead -->
<header class="masthead">
    <div class="container h-100">
            <div class="">
                <br /><br />
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-info font-weight-bold">Encuentra tu mejor experiencia!</h1>
                    <hr class="divider my-auto">
                </div>
                <div>
                    <p class="text-white-75 font-weight-light mb-5">Es fácil, solo dirigete a nuestras ofertas!</p>
                    <br /><br />
                          <div style="display: flex; text-align:center;">
                              @using (Html.BeginForm("ListadoDepartamentos", "Home"))
                              {
                                  @Html.DropDownList("idT", ViewBag.tipo as SelectList, "Tipo de Departamento", new { @class = "custom-select" })

                                  @Html.DropDownList("idD", ViewBag.distrito as SelectList, "Distrito", new { @class = "custom-select" })
                                  <input type="text" name="nom" value="@ViewBag.nomdep" class="form-control" placeholder="Buscar por descripción o código" />
                                  @*<a class="btn btn-primary btn-xl js-scroll-trigger" href="Buscar/ListadoDepartamentos?nom=Dep" style="margin-top: -10px;">Buscar</a>*@

                                  <input type="submit" class="btn btn-primary btn-xl js-scroll-trigger" value="Buscar" />
                                  }
                              </div>
                </div>
        </div>
    </div>
</header>

